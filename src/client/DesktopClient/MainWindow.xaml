            <TextBox x:Name="messageTextBox" />
            <Button x:Name="sendBtn" Content="Отправить" Click="sendBtn_Click" IsEnabled="False" />
            <ListBox x:Name="chatbox" />
        </StackPanel>-->
    </Grid>
</Window>
